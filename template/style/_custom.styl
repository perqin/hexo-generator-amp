.camera-icon
  &:after
    content: '\f083'
    font-family: font-awesome
    font-size: font-size * 0.6
.amp-img-wrapper
  margin: content-margin content-margin-side 0 content-margin-side

.imgCaption
  margin: font-size * 0.2 content-margin-side
  line-height: font-size * 1.1
  text-align: center
  color: color-default
.imgCaption , .imgcap , .photoby
  font-size: font-size * 0.6
.photoby
  a
    font-size: font-size * 0.6


.grayBtn
  display: block
  margin: content-margin-side auto
  text-align: center
  padding: font-size * 0.8
  font-size: font-size
  border-radius: 4px
  font-weight: bold
  color: color-background
  background-color: color-mail-flat
  &:hover
    color: color-background
    background-color: darken(color-mail-flat , 20)

.applink-wrapper
  .applink-col
    width: 100%
    a
      display: block
      width: 60%
      margin: 0 auto


.babylink-box , .applink-wrapper
  border: 1px solid color-amazon
  position: relative
  margin: content-margin content-margin-side
  padding: 0
  border-radius: 2px
  .amp-img-wrapper
    margin: font-size content-margin-side
  .babylink-wrapper, .applink
    margin: font-size content-margin-side
  .babylink-image, .app-image
    margin: 0 5% 0 0
    display: inline-block
    vertical-align : middle
    width: 40%
  .babylink-info, .app-title
    margin: 0
    display: inline-block
    vertical-align : middle
    width: 55%
  .babylink-description, .app-info
    margin: font-size content-margin-side
  .babylink-description
    line-height: font-size * 1.8
  .babylink-manufacturer
    margin: font-size * 0.8 0
    line-height: font-size * 1.8
  .babylink-title
    font-size: font-size
    margin: font-size * 0.8 0
    line-height: font-size * 1.8
    a
      display: block
      padding: font-size 0
  .aicon
    position: absolute
    display: none

  .bl-btn
    margin: font-size * 1.4 0 font-size 0
  .babylink-comm
    margin: font-size * 0.2 0
    height: font-size * 4.0
    a.amb
      utilAni(0.1s)
      font-size: font-size
      font-weight: bold
      height: font-size * 3.5
      line-height: font-size * 3.5
      text-align: center
      color: color-background
      width: 95%
      margin: 0 auto
      padding: 0
      display: block
      border-top: 1px solid color-background
      border-radius: 4px

      &:hover
        color: color-background
        border-top: 4px solid color-background

  .babylink-amazonBtn
    a.amb
      background-color: color-amazon
      border-bottom: 4px solid darken(color-amazon , 15)
      &:hover
        border-bottom: 1px solid darken(color-amazon , 15)
  
  .babylink-rakutenBtn
    a.amb
      background-color: color-rakuten
      border-bottom: 4px solid darken(color-rakuten , 15)
      &:hover
        border-bottom: 1px solid darken(color-rakuten , 15)

  .rakuten-icon
    &:before
      display: inline-block
      font-family: font-sans
      content: "R"
      font-weight: bold
      color: color-rakuten
      font-size: 0.8 * font-size
      background-color: color-background
      border-radius: 50%
      line-height: 1.4 * font-size
      width: 1.4 * font-size
      height: 1.4 * font-size
      
  .amazon-icon
    &:before
      content: "\f270"
      font-family: fontawesome
      color: #FFF


p.openMap
  text-align: center

.attention , .r-download, .r-memo
  margin: content-margin content-margin-side
  padding: 0
  border-radius: 2px
  .label-content
    margin: content-margin-side content-margin-side
    padding: 0
  h5 , h6 , h5 span , h6 span
    font-size: font-size
  h5.label-title
    &:before
      margin: 0 font-size * 0.5 0 0
      font-family: fontawesome
  h5.label-title , h5.label-title span
    color: color-background
    text-align: center
  h5.label, h6.label , h5.label-title
    padding: font-size content-margin-side
    margin: 0
    border: none
    border-top: none
    border-bottom: none
    border-left: none
    border-right: none
  h5.label, h6.label
    text-align: left

.attention
  border: 1px solid color-attention
  h5.label-title
    &:first-child:before
      content: "\f071"
  h5.label-title , h5.label-title span
    background-color: color-attention
  h5.label, h6.label , h5.label span, h6.label span
    background-color: color-background
    color: color-attention
  ul li
    &::after
      background-color: lighten(color-attention , 5)
  ol li
    &:before
      background-color: lighten(color-attention , 5)
.r-download
  border: 1px solid color-download
  h5.label-title
    &:first-child:before
      content: "\f019"
  h5.label-title , h5.label-title span
    background-color: color-download
  h5.label, h6.label , h5.label span, h6.label span
    background-color: color-background
    color: color-download
  ul li
    &::after
      background-color: lighten(color-download , 5)
  ol li
    &:before
      background-color: lighten(color-download , 5)
.r-memo
  border: 1px solid color-memo
  h5.label-title
    &:first-child:before
      content: "\f0f6"
  h5.label-title , h5.label-title span
    background-color: color-memo
  h5.label, h6.label , h5.label span, h6.label span
    background-color: color-background
    color: color-memo
  ul li
    &::after
      background-color: lighten(color-memo , 5)
  ol li
    &:before
      background-color: lighten(color-memo , 5)


.amSimple
  margin: content-margin content-margin-side
  padding: font-size * 1.0 font-size * 1.8
  position: relative
  background-color: color-background
  border-radius: 2px
  border: 1px solid color-default
  p
    margin: font-size 0

amp-img , img
  user-select: none
  -webkit-user-select: none
  -moz-user-select: none
  -khtml-user-select: none
  -webkit-user-drag: none
  -khtml-user-drag: none


.bcg
  width: 90%
  margin: content-margin auto
.bcg-x-and-cell
  width: 100%
  margin: 0
  position: relative
  height: 100%

.bcg-x-label
  width: 94%
  margin: 5px 0 0 6%
  text-align: center

.bcg-y-label
  // position: relative
  -webkit-writing-mode: vertical-rl
  -ms-writing-mode: tb-rl
  writing-mode: vertical-rl
  text-orientation: sideways-right
  width: 6%
  display: inline-block

.bcg-y-label-inner
  position: absolute
  top: 50%
  left: 1%
  display:inline-block
  transform:translate(-50%, -50%) rotate( 180deg)
  text-align: center
  height: 100%

.label-circle
  display: inline-block
  padding: font-size * 0.2
  border-radius: 50%
  width: font-size * 1.6
  height: font-size * 1.6
  line-height: font-size * 1.6
  font-size: font-size * 0.8

.label-week
  background-color: lighten(color-default,26)
  color: color-background
.label-strong
  background-color: lighten(color-default,1)
  color: color-background

.label-desc
  margin: font-size * 0.8
  display: inline-block

.bcg-table-wrapper
  margin: 0
  padding: 0
  width: 94%
  display: inline-block

.bcg-table
  border-collapse: collapse
  .bcg-td
    width: 50%
    text-align: center
    height: 100px
    border: 1px solid color-background
    margin: 0
    padding: 0
    font-size: font-size * 1.2
  .def
    background-color: lighten(color-default,26)
    color: color-background
  .em
    background-color: lighten(color-default,12)
    color: color-background
  .strong
    background-color: lighten(color-default,1)
    color: color-background