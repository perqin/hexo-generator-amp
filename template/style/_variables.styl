//----------------------------------
// Font setting
//----------------------------------
font-sans    = sans-serif
font-serif   = font-sans
font-mono    = Menlo, Consolas, Monaco, Consolas, monospace
font-awesome = "fontawesome"

font-weight-normal 	 = 500
font-size-root       = 14px
font-size-root-large = 16px
font-size 			 = 1.0rem
letter-spacing       = font-size * 0.05
content-margin       = font-size * 3
content-margin-side  = font-size * 0.8
line-height 		 = font-size * 2

font-size-code		 = font-size * 0.85
letter-spacing-code  = font-size * 0.05

